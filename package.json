{
  "name": "normcore",
  "private": true,
  "version": "0.0.0",
  "description": "An assertively basic web framework.",
  "style": "./dist/css/normcore.css",
  "exports": "./dist/js/normcore.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint:css": "stylelint src/css --fix",
    "lint:js": "eslint src/js --fix",
    "lint": "npm run lint:css && npm run lint:js",
    "build:css": "postcss src/css/normcore.css -o dist/css/normcore.css -m",
    "build:js": "rollup -c",
    "prebuild": "npm run clean",
    "build": "npm run build:css && npm run build:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sccherry/normcore.git"
  },
  "keywords": [
    "css",
    "javascript"
  ],
  "author": "Steve Cherry <steve@stevecherry.net> (https://stevecherry.net)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sccherry/normcore/issues"
  },
  "homepage": "https://github.com/sccherry/normcore#readme",
  "devDependencies": {
    "eslint": "^8.8.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "postcss-minify": "^1.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.2",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "stylelint-order": "^5.0.0"
  }
}
